section.fill-content-login
  .container
    .row
      .col-md-6.col-md-offset-3
        .col-border-login
          h1 confirmation
          = form_for(resource, as: resource_name, url: user_confirmation_path(resource_name), html: { method: :post }) do |f|
            = devise_error_messages!
            .form-group
              = f.label :email
              = f.email_field :email, autofocus: true, :class => 'form-control input-login'
            .form-group
              = f.submit "Resend confirmation instructions", :class => 'btn btn-default btn-block btn-login'
          = render "devise/shared/links"
